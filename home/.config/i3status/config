general {
  colors = true
  interval = 10
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet bnep0"
order += "ethernet _first_"
order += "path_exists VPN"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
# order += "load"
order += "disk /"
order += "battery all"
order += "tztime local"
order += "tztime utc"
order += "volume master"

path_exists VPN {
  path = "/proc/sys/net/ipv4/conf/tun0"
  format = "VPN"
  format_down = ""
  color_good = "#ff0000"
  separator_block_width = 20
}

wireless _first_ {
  format_up = "%essid%quality %bitrate %frequency"
  format_down = "W: -"
  color_bad = "#aaaaaa"
  color_good = "#ffffff"
  separator_block_width = 20
}

ethernet bnep0 {
  format_up = "BT: %ip"
  format_down = "BT: -"
  color_bad = "#aaaaaa"
  color_good = "#ffffff"
  separator_block_width = 20
}

ethernet _first_ {
  format_up = "E: %speed"
  format_down = "E: -"
  color_bad = "#aaaaaa"
  color_good = "#ffffff"
  # trying to make connected eth not be yellow
  color_degraded = "#cccccc"
  separator_block_width = 20
}

cpu_temperature 0 {
  format = "%degrees°C"
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input"
  #path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
  #path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
  max_threshold = 85
  separator_block_width = 20
}
cpu_usage {
  format = "%usage"
  separator_block_width = 20
}
load {
  format = "%1min"
}

memory {
  format = "🐏 %available"
  threshold_degraded = "1G"
  separator_block_width = 20
  min_width = 50
}

disk "/" {
  format = "💾 %avail"
  prefix_type = "decimal"
  low_threshold = 5
  separator_block_width = 20
}

battery all {
#  format = "%status %percentage %remaining %consumption"
  format = "%status %percentage"
  hide_seconds = true
  integer_battery_capacity = true
  last_full_capacity = true
  status_chr = "⚡️"
  status_bat = "🔋"
  status_unk = "❔"
  status_full = "🔌"
  low_threshold = 15
  threshold_type = "percentage"
  separator_block_width = 20
}

tztime local {
  format = "%Y-%m-%d %H:%M"
  separator_block_width = 20
}
tztime utc {
  format = "%H:%MZ"
  timezone = "UTC"
  separator_block_width = 20
}

volume master {
  format = "🔉 %volume"
  format_muted = "🔇 %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  # make muted gray, not yellow
  color_degraded = "#aaaaaa"
  align = "left"
  min_width = 100
  separator_block_width = 20
}
