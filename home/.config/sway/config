# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    id main_bar
    font "Source Code Pro Regular 9"
#    font ProggyTinyTTSZ
    position top
    status_command i3status
    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #323232 #323232 #5c5c5c
    }
}

